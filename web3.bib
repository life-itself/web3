	author = {Kinney, Alexander B.},
	date = {2021},
	note = {Publisher: Routledge},
	keywords = {Bitcoin, {IDEOLOGY}, {PROCESSED}, Qualitative Methods, Technology, Value},
}

@article{brekke_hacker-engineers_2021,
