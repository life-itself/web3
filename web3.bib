	author = {Faqir-Rhazoui, Youssef and Arroyo, Javier and Hassan, Samer},
	date = {2021},
	note = {{ISBN}: 1317402100139
Publisher: Journal of Internet Services and Applications},
	keywords = {Blockchain, {DAO}, {DAOS}, Decentralized autonomous organization, Distributed systems, Ethereum, Governance, Online community, {PROCESSED}, Quantitative research, Voting, {xDai}},
}

